<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <GenerateSBOM>true</GenerateSBOM>
    <TargetFramework>net6.0</TargetFramework>
    <Authors>ProjectSample</Authors>
    <Version>1.2.4</Version>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <!--Ignore errors related to selecting a nuget.config and dependency resolution-->
  <PropertyGroup>
    <NoWarn>$(NoWarn);NU1507;NU5128</NoWarn>
  </PropertyGroup>

  <!--
      For multi-targeted builds, an extra build seems to run even when the TargetFramework is not set. Therefore,
      The GenerateSbomTarget executes an extra time. To avoid this, we check to see if the TargetFramework is set
  -->
  <Import Project="../Microsoft.Sbom.Targets.Test.targets"/>

</Project>
