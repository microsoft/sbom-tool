    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>$(AssemblyName).Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <Content Include="README.md">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <!-- Set default value for namespace base uri for the internal Microsoft assembly. -->
    <ItemGroup>
      <AssemblyAttribute Include="Microsoft.Sbom.Common.Config.Attributes.DefaultNamespaceBaseUriAttribute">
        <_Parameter1>https://sbom.microsoft</_Parameter1>
        <_Parameter2>The 'NamespaceUriBase' parameter cannot be overriden for internal Microsoft projects, setting it to the default value.</_Parameter2>
      </AssemblyAttribute>
    </ItemGroup>
  
    <ItemGroup>
      <ProjectReference Include="..\Microsoft.Sbom.Adapters\Microsoft.Sbom.Adapters.csproj" />
